<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WearableLEDsController.MainPage"
             Title="BLE Example">
  <StackLayout Padding="20" Spacing="10">
    <Label Text="Available Devices" FontAttributes="Bold"/>
    <ListView x:Name="DeviceListView" SelectionMode="Single" ItemSelected="DeviceSelected">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" Detail="{Binding Id}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Start Scan" Clicked="StartScanClicked"/>
    <Label Text="Toggle LED"/>
    <Switch x:Name="LedSwitch" Toggled="LedSwitchToggled"/>
  </StackLayout>
</ContentPage>
